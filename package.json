{
  "name": "restaurant_project",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "set NODE_OPTIONS=--max-old-space-size=8192&& next dev",
    "dev:fast": "next dev --turbo",
    "build": "set NODE_OPTIONS=--max-old-space-size=8192&& next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "set ANALYZE=true&& next build"
  },
  "dependencies": {
    "@iconify/icons-ion": "^1.2.10",
    "@iconify/react": "^5.0.1",
    "aos": "^2.3.4",
    "axios": "^1.7.2",
    "date-fns": "^3.4.0",
    "dompurify": "^3.2.6",
    "eslint-config-next": "14.2.30",
    "framer-motion": "^11.11.9",
    "gray-matter": "^4.0.3",
    "next": "^15.3.4",
    "next-auth": "^4.24.7",
    "next-themes": "^0.3.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.4.1",
    "react-masonry-css": "^1.0.16",
    "react-slick": "^0.30.2",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.30",
    "@swc/core": "^1.3.92",
    "@swc/jest": "^0.2.29",
    "@tailwindcss/postcss": "^4.1.3",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/aos": "^3.0.7",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.1",
    "@types/react-slick": "^0.23.13",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.8.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest",
        {
          "jsc": {
            "transform": {
              "react": {
                "runtime": "automatic"
              }
            },
            "target": "es2022"
          }
        }
      ]
    }
  }
}
